<div class="deleteMain">
    <table border="1px">
        <tr>
            <th>Image</th><th>Title</th><th>Publisher</th><th>Author</th> <th>Price</th><th>Delete</th>
        </tr>
        <% data.forEach((data)=>{ %> 
        <tr class="imgdata">
            <td><img src="<%= data.image %>" height="100%" width="100%" ></td>
            <td><%= data.name %></td>
            <td><%= data.author %></td>
            <td><%= data.publisher %></td>
            <td><%= data.price %></td>
            <td><a href="update<%= data._id %>"><button style="background-color: rgba(0, 0, 255, 0.801);">Update</button></a></td>
        </tr>
    <% }) %>
    </table>
</div>
<link rel="stylesheet" href="css/deletebook.css">